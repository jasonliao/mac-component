{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es2015", "dom"] 
  },
  "exclude": [
    "node_modules",
    "webpack",
    "scripts"
  ],
  "include": ["lib"]
}